@using QLNSFAHASA.Models
@using System.Globalization

@{ var customer = Session["KhachHang"] as QLNSFAHASA.Models.KhachHang;
    var employee = Session["NhanVien"] as QLNSFAHASA.Models.NhanVien;
    decimal tongtien = 0;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<style>
    .dropdown-menu a:hover {
        color: red;
    }
</style>
<body>
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">

                @{
                    if (customer == null && employee == null)
                    {
                        <ul class="header-links pull-right">
                            <li><a href="/KhachHangs/Login"><i class="fa fa-user-o"></i> Đăng nhập</a></li>
                            <li><a href="/KhachHangs/Register"><i class="fa fa-user-o"></i> Đăng ký</a></li>
                        </ul>
                    }
                    if (customer != null)
                    {
                        <ul class="header-links pull-left">
                            <li><a href="#"><i class="fa fa-phone"></i>@customer.SDT</a></li>
                            <li><a href="#"><i class="fa fa-envelope-o"></i>@customer.Email</a></li>
                            <li><a href="#"><i class="fa fa-map-marker"></i>Xin chào: @customer.HoTenKH</a></li>
                        </ul>
                        <ul class="header-links pull-right">

                            <li><a onclick="location.href='@Url.Action("Details", "KhachHangs", new { id = customer.MaKH })'"><i class="fa fa-user-o"></i> Tài khoản của tôi</a></li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "KhachHangs")</li>
                        </ul>
                    }
                    if (employee != null)
                    {
                        <ul class="header-links pull-left">
                            <li><a href="#"><i class="fa fa-phone"></i>@employee.SDT</a></li>
                            <li><a href="#"><i class="fa fa-envelope-o"></i>@employee.Email</a></li>
                            <li><a href="#"><i class="fa fa-map-marker"></i>Xin chào: @employee.HoTenNV</a></li>
                        </ul>
                        <ul class="header-links pull-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Quản lý <span class="caret"></span></a>
                                <ul class="dropdown-menu ">
                                    <li><a href="/SanPhams/IndexAdmin" style="color: black"><i class="fa fa-pencil"></i> Quản lý sản phẩm</a></li>
                                    <li><a href="/HoaDons/Index" style="color: black"><i class="fa fa-pencil"></i> Quản lý hóa đơn</a></li>
                                    <li><a href="/NhanViens/Index" style="color: black"><i class="fa fa-pencil"></i> Quản lý nhân viên</a></li>
                                    <li><a href="/KhachHangs/Index" style="color: black"><i class="fa fa-pencil"></i> Quản lý khách hàng</a></li>

                                </ul>

                            </li>
                            <li><a onclick="location.href='@Url.Action("Details", "NhanViens", new { id = employee.MaNV })'"><i class="fa fa-user-o"></i> Tài khoản của tôi</a></li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "KhachHangs")</li>
                        </ul>
                                }
                                }
</div>
        </div>
        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <img src="~/img/logo.jpg" width="200" " height="200" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- /SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form action="@Url.Action("Search", "SanPhams")" method="get">
                                <select class="input-select">
                                    <option value="0">Tất cả</option>
                                </select>
                                <input type="text" class="input" name="searchString" placeholder="Tên sản phẩm">
                                <button type="submit" class="search-btn">Tìm Kiếm</button>
                            </form>
                        </div>
                    </div>
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Wishlist -->
                            
                            <!-- /Wishlist -->
                            <!-- /Cart -->
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Giỏ Hàng</span>
                                    <div class="qty">@(Session["cart"] != null ? ((List<SanPham>)Session["cart"]).Count.ToString() : "0")</div>
                                </a>
                                <div class="cart-dropdown">
                                    <div class="cart-list">
                                        @if (Session["cart"] != null)
                                        {
                                            foreach (var item in (List<SanPham>)Session["cart"])
                                            {
                                                <div class="product-widget">
                                                    <div class="product-img">
                                                        <img src="~/Images/@Html.DisplayFor(modelItem => item.MaSP)/@Html.DisplayFor(modelItem => item.ANH)" alt="">
                                                    </div>
                                                    <div class="product-body">
                                                        <h3 class="product-name"><a href="#">@item.TenSP</a></h3>
                                                        <h4 class="product-price"><span class="qty">1x</span>@item.DonGia.ToString("N0", CultureInfo.GetCultureInfo("vi-VN")).Replace(",", ".") VND </h4>
                                                    </div>
                                                    <form method="post" action="@Url.Action("RemoveFromCart", "SanPhams", new { id = item.MaSP })">
                                                        <button class="delete"><i class="fa fa-close"></i></button>
                                                    </form>
                                                </div>
                                                tongtien += item.DonGia;
                                            }
                                        }
                                    </div>
                                    <div class="cart-summary">
                                        <small>@(Session["cart"] != null ? ((List<SanPham>)Session["cart"]).Count : 0) sản phẩm đã chọn</small>
                                        <h5>TỔNG TIỀN: @tongtien.ToString("N0", CultureInfo.GetCultureInfo("vi-VN")).Replace(",", ".") VND</h5>
                                    </div>
                                    <div class="cart-btns">
                                        @*@Html.ActionLink("GIỎ HÀNG", "Cart", "SanPhams", new { id = customer.MaKH }, new { @class = "btn btn-primary" })*@
                                        <a href="/SanPhams/Cart">GIỎ HÀNG</a>
                                        @*@Html.ActionLink("CheckOut", "CheckOut", "HoaDons", new { id = customer.MaKH }, new { @class = "btn btn-primary" })
                                        <a href="/HoaDons/Index">Checkout  <i class="fa fa-arrow-circle-right"></i></a>*@
                                    </div>
                                </div>
                            </div>
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    @{
        Html.RenderAction("RenderMenu", "Home");
    }
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            @RenderBody()
                            <!-- /tab -->
                        </div>
                    </div>
                </div>
                <!-- Products tab & slick -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- FOOTER -->
    <footer id="footer">
        <!-- top footer -->
        <div class="section">
            <!-- container -->
            <div class="container ">
                <!-- row -->
                <div class="row">
                    <div class="col-md-6 col-xs-6 ">
                        <div class="footer">
                            <h3 class="footer-title">Giới thiệu</h3>
                            <p>Cảm ơn vì đã sử dụng và đồng hành cùng chúng tôi. Chúc bạn một ngày tốt lành! </p>
                            <ul class="footer-links">
                                <li><a href="#"><i class="fa fa-map-marker"></i>Nha Trang</a></li>
                                <li><a href="#"><i class="fa fa-phone"></i>+09090909</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i>email@email.com</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="clearfix visible-xs"></div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Dịch vụ của chúng tôi</h3>
                            <ul class="footer-links">
                                <li><a href="#">Đặt hàng</a></li>
                                <li><a href="#">Sản phẩm bán chạy</a></li>
                                <li><a href="#">Khuyến mãi mới nhất</a></li>
                                <li><a href="#">Trung tâm hỗ trợ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Liên kết hữu ích</h3>
                            <ul class="footer-links">
                                <li><a href="#">Về chúng tôi</a></li>
                                <li><a href="#">Hướng dẫn thanh toán</a></li>
                                <li><a href="#">Chính sách vận chuyển</a></li>
                                <li><a href="#">Trung tâm bảo hành</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /top footer -->
        <div class="clearfix visible-xs"></div>
        <!-- bottom footer -->
        <div id="bottom-footer" class="section">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="footer-payments">
                            <li><a href="#"><i class="fa fa-cc-visa"></i></a></li>
                            <li><a href="#"><i class="fa fa-credit-card"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-paypal"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-mastercard"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-discover"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-amex"></i></a></li>
                        </ul>
                        <span class="copyright">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> Project này được thực hiện bởi nhóm 1 PhuongPhan - CongLoi - HoaiAn<i class="fa fa-heart-o" aria-hidden="true"></i> </a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </span>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /bottom footer -->
    </footer>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>
