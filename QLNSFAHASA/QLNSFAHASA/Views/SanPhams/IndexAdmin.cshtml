@model IEnumerable<QLNSFAHASA.Models.SanPham>

@{
    ViewBag.Title = "IndexAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}


@Html.ActionLink("Thêm sản phẩm", "Create", null, new { @class = "btn btn-primary", style = "font-size: 16px; padding: 10px 20px; border-radius: 5px; color: #fff; background-color: #007bff; border-color: #007bff;" })

<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Đơn Giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Ngày Xuất Bản
        </th>

        <th>
            Ảnh
        </th>
        <th>
            Tên loại sản phẩm
        </th>
        <th>
            Đơn vị tính
        </th>
        <th>
            Tên Nhà cung cấp
        </th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{i++;}
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NXB)
            </td>

            <td>
                <img src="~/Images/@Html.DisplayFor(modelItem => item.ANH)" alt="Ảnh sản phẩm" width="50" height="50">
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.DanhMucLoaiSanPham.TenLSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViTinh.DVT)
                
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NCC.TenNCC)
            </td>
            <td>
                <button type="button" onclick="location.href='@Url.Action("Edit", "SanPhams", new { id = item.MaSP })'" class="btn btn-warning">Sửa</button>
                <button type="button" onclick="location.href='@Url.Action("Details", "SanPhams", new { id = item.MaSP })'" class="btn btn-primary">Chi Tiết</button>
                <button type="button" onclick="location.href='@Url.Action("Delete", "SanPhams", new { id = item.MaSP })'" class="btn btn-danger">Xóa</button>
            </td>
        </tr>
    }

</table>

