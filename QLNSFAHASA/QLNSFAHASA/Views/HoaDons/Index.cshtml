@model IEnumerable<QLNSFAHASA.Models.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}
<h2>Danh sách hóa đơn </h2>

@Html.ActionLink("Thêm hóa đơn", "Create", null, new { @class = "btn btn-primary", style = "font-size: 16px; padding: 10px 20px; border-radius: 5px; color: #fff; background-color: #007bff; border-color: #007bff;" })

<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Ngày lập
        </th>
        <th>
            Hình thức TT
        </th>
        <th>
            Họ tên KH
        </th>
        <th>
            Họ tên NV
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{i++;}
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayLap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMucHinhThucThanhToan.LoaiHinhThucTT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.HoTenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.HoTenNV)
            </td>
            <td>
                <button type="button" onclick="location.href='@Url.Action("Edit", "HoaDons", new { id = item.MaHD })'" class="btn btn-warning">Sửa</button>
                <button type="button" onclick="location.href='@Url.Action("Details", "HoaDons", new { id = item.MaHD })'" class="btn btn-primary">Chi Tiết</button>
                <button type="button" onclick="location.href='@Url.Action("Delete", "HoaDons", new { id = item.MaHD })'" class="btn btn-danger">Xóa</button>
            </td>
        </tr>
    }

</table>
